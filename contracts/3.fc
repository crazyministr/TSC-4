global tuple end_of_replace;

(int) ubitsize (int a) asm "UBITSIZE";
forall X -> int is_null?(X x) asm "ISNULL";
builder _store_builder_ref(builder to, builder what) asm(what to) "STBREF";

;; const empty_dict_value = "";
;; (cell) custom::udict_delete_get_max(cell dict, int key_len) asm(-> 0) "DICTUREMMAX";

(builder) rec(cell llist, int flag, int flag_len, int value, int i, int buffer, int buffer_len) {
  slice cs = llist.begin_parse();
  int j = i;

  repeat (cs.slice_bits()) {
    int bit = cs~load_uint(1);

    if (buffer_len == flag_len) {  ;; shift buffer
      int first_bit_pos = 1 << (buffer_len - 1);
      int first_bit = buffer & first_bit_pos;
      if (first_bit) {
        buffer ^= first_bit_pos;
      }
    } else {
      buffer_len += 1;
    }
    buffer = (buffer << 1) | bit;
    if (buffer == flag) {
      end_of_replace = cons(j, end_of_replace);
      (buffer, buffer_len) = (0, 0);
    }
    j += 1;
  }
  builder b = begin_cell();
  if (cs.slice_refs()) {
    builder inner_b = rec(cs.preload_ref(), flag, flag_len, value, j, buffer, buffer_len);
    b = b.store_builder(inner_b);
  }

  cs = llist.begin_parse();
  j -= 1;  ;; cuz added +1 above
  while (j >= i) {
    int end_pos = -1;
    if (~ end_of_replace.is_null?()) {
      end_pos = car(end_of_replace);
    }
    int start_pos = end_pos - flag_len + 1;
    if (j > end_pos) {
      int bits_to_read = min(cs.slice_bits(), j - end_pos);
      ;; ~strdump_int("bit_to_read", bits_to_read);
      slice to_insert = cs.slice_last(bits_to_read);
      cs~skip_last_bits(bits_to_read);
      if (b.builder_bits() + bits_to_read < 1024) {
        b = begin_cell().store_slice(to_insert).store_builder(b);
      } else {
        b = begin_cell().store_slice(to_insert)._store_builder_ref(b);
      }
      j -= bits_to_read;
    } elseif (j >= start_pos) {  ;; & (j <= end_pos)
      int bits_to_skip = min(cs.slice_bits(), j - start_pos + 1);
      cs~skip_last_bits(bits_to_skip);

      if (j == end_pos) {
        int value_bits = ubitsize(value);
        if (b.builder_bits() + value_bits < 1024) {
          b = begin_cell().store_uint(value, value_bits).store_builder(b);
        } else {
          b = begin_cell().store_uint(value, value_bits)._store_builder_ref(b);
        }

      }

      j -= bits_to_skip;
    } else {
      (_, tuple t) = uncons(end_of_replace);
      end_of_replace = t;
    }

  }

  return b;
}

;; testable
(cell) find_and_replace(int flag, int value, cell linked_list) method_id {
  int flag_len = ubitsize(flag);
  end_of_replace = null();

  builder ans = rec(linked_list, flag, flag_len, value, 0, 0, 0);

  return ans.end_cell();
}
